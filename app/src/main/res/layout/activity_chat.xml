<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.Activites.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_back_arrow_black" />

            <TextView
                android:id="@+id/toolbarText"
                style="@style/AppTheme.TextView.normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black" />


            <ImageView
                android:id="@+id/chatAttacment"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/attach" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/loadMore"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:indeterminateTint="@color/gray_light"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_80sdp" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_white_top_shape"
        android:elevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_20sdp">


            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/text_color_high_light"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right"
                android:hint="ابدأ الكتابة"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="6"
                android:minHeight="@dimen/_35sdp"
                android:outlineSpotShadowColor="@color/text_color_high_light"
                android:padding="@dimen/_5sdp"
                android:textAlignment="gravity"
                android:textColor="@color/black_text_normal"
                android:textColorHighlight="@color/text_color_high_light"
                android:textColorLink="@color/text_color_high_light"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/_14sdp"
                tools:ignore="Autofill" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:visibility="visible"
                android:id="@+id/fileAttac"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/file"
                app:tint="@color/green_normal" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:visibility="visible"
                android:id="@+id/attachemntChat"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/attached" />


            <ImageView
                android:id="@+id/ivSendMessage"
                android:scaleX="-1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/send_chat_icon" />


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

