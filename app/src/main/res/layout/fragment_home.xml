<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.Activites.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"

        android:layout_marginTop="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:id="@+id/lin"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="4dp"
                    android:id="@+id/noticicationClick"
                    android:src="@drawable/notificaiton_icon">

                </ImageView>
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/uniwebSite"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@id/noticicationClick"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/bau_logo">

                </ImageView>

            </LinearLayout>


            <com.uni.bau.utilities.CustomFontBold
                android:id="@+id/dateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@id/lin"
                android:textColor="@color/black"
                android:textSize="22sp">

            </com.uni.bau.utilities.CustomFontBold>






        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            style="@style/AppTheme.TextView.big"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="اخبار الجامعة"
            android:visibility="gone"
            android:id="@+id/uniNews"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black_text_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/sliderLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="-35dp"
                        android:layout_height="wrap_content">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/imagesViewPager"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:clipToPadding="false"
                            android:layoutDirection="ltr"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <com.uni.bau.utilities.CustomFontBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/annownsment"
                android:text="الإعلانات الجامعية"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="18sp">

            </com.uni.bau.utilities.CustomFontBold>
            <com.uni.bau.utilities.CSwipeRefreshLayout
                android:id="@+id/swipeRefreshHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/_10sdp" />

            </com.uni.bau.utilities.CSwipeRefreshLayout>

        </LinearLayout>


    </LinearLayout>

<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:id="@+id/swipeRefresh"-->
<!--        android:layout_height="match_parent">-->
<!--       -->




<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->





</LinearLayout>

</androidx.core.widget.NestedScrollView>
